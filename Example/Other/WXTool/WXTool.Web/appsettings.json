      //"IPs": "http://127.0.0.1:2364,http://localhost:2364",
      "IPs": "http://localhost:9528"
    },
    "SpaConfig": {
      "Enable": true,
      "DevUrl": "http://localhost:5002",
      "SourcePath": "dist",
      "RootPath": "dist"
    }
  }
